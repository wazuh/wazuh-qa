{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "QACTL Config file schema",
  "properties": {
    "deployment": {
      "$id": "#/properties/deployment",
      "type": "object",
      "patternProperties": {
        "^host_[0-9]*$": {
          "type": "object",
          "properties": {
            "provider": {
              "type": "object",
              "properties": {
                "vagrant": {
                  "type": "object",
                  "required": [
                    "enabled",
                    "vagrantfile_path",
                    "vagrant_box",
                    "vm_memory",
                    "vm_cpu",
                    "vm_name",
                    "vm_system",
                    "label",
                    "vm_ip"
                  ],
                  "properties": {
                    "enabled": {
                      "type": "boolean"
                    },
                    "vagrantfile": {
                      "type": "string"
                    },
                    "vagrant_box": {
                      "type": "string"
                    },
                    "vm_memory": {
                      "type": "integer"
                    },
                    "vm_cpu": {
                      "type": "integer"
                    },
                    "vm_name": {
                      "type": "string"
                    },
                    "vm_system": {
                      "type": "string",
                      "enum": ["linux","windows"]
                    },
                    "label": {
                      "type": "string"
                    },
                    "vm_ip": {
                      "type": "string"
                    },
                    "quiet_out": {
                      "type": "boolean"
                    }
                  }
                },
                "docker": {
                  "type": "object",
                  "required": [
                    "enabled",
                    "dockerfile_path",
                    "name"
                  ],
                  "properties": {
                    "enabled": {
                      "type": "boolean"
                    },
                    "dockerfile_path": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "ip": {
                      "type": "string"
                    },
                    "remove": {
                      "type": "boolean"
                    },

                    "dockerfile": {
                      "type": "string"
                    },
                    "ports": {
                      "type": "object"
                    },
                    "detach": {
                      "type": "boolean",
                      "default": "true"
                    },
                    "stdout": {
                      "type": "boolean"
                    },
                    "stderr": {
                      "type": "boolean"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "provision": {
      "type": "object",
      "required": [
        "hosts"
      ],
      "properties": {
        "hosts": {
          "patternProperties": {
            "^host_[0-9]*$": {
              "type": "object",
              "required": [
                "host_info"
              ],
              "properties": {
                "host_info": {
                  "type": "object",
                  "required": [
                    "ansible_connection",
                    "ansible_user",
                    "ansible_password",
                    "ansible_port",
                    "system",
                    "installation_files_path",
                    "ansible_python_interpreter",
                    "host"
                  ],
                  "properties": {
                    "ansible_connection": {
                      "type": "string"
                    },
                    "host": {
                      "type": "string"
                    },
                    "ansible_user": {
                      "type": "string"
                    },
                    "ansible_password": {
                      "type": "string"
                    },
                    "ansible_port": {
                      "type": "integer"
                    },
                    "ansible_python_interpreter": {
                      "type": "string"
                    },
                    "installation_files_path": {
                      "type": "string"
                    },
                    "system": {
                      "type": "string",
                      "enum": [
                      "rpm",
                      "deb",
                      "windows",
                      "macos",
                      "solaris10",
                      "solaris11",
                      "rpm5",
                      "wpk-linux",
                      "wpk-windows"]
                    }
                  }
                },
                "wazuh_deployment": {
                  "type": "object",
                  "required": [
                    "type",
                    "target",
                    "installation_files_path",
                    "wazuh_install_path"
                  ],
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": ["sources", "package"]
                    },
                    "target": {
                      "type": "string",
                      "enum": ["manager", "agent"]
                    },
                    "manager_ip": {
                      "type": "string"
                    },
                    "wazuh_branch": {
                      "type": "string"
                    },
                    "local_package_path": {
                      "type": "string"
                    },
                    "installation_files_path": {
                      "type": "string"
                    },
                    "system":{
                      "type":"string"
                    },
                    "version":{
                      "type": "string"
                    },
                    "revision":{
                      "type": "string"
                    },
                    "repository":{
                      "type": "string"
                    },
                    "wazuh_install_path": {
                      "type": "string",
                      "default": "/var/ossec"
                    },
                    "health_check": {
                      "type": "boolean"
                    },
                    "s3_package_url": {
                      "type" : "string"
                    }
                  },
                  "allOf": [
                    {
                      "if": {
                        "properties": {"type": {"const": "sources"}}
                      },
                      "then": {"required": ["wazuh_branch"]},
                      "else": {
                        "oneOf": [
                          {"required": ["local_package_path"]},
                          {"required": ["s3_package_url"]},
                          {"required": [
                            "system",
                            "version",
                            "revision",
                            "repository"]}
                        ]
                      }
                    },
                    {
                      "if": {
                        "properties": {"target": {"const": "agent"}}
                      },
                      "then": {"required": ["manager_ip"]}
                    }
                  ]
                },
                "qa_framework": {
                  "type": "object",
                  "required": [
                    "wazuh_qa_branch",
                    "qa_workdir"
                  ],
                  "properties": {
                    "wazuh_qa_branch": {
                      "type": "string"
                    },
                    "qa_workdir": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "tasks": {
      "type": "object",
      "patternProperties": {
        "^task_[0-9]*$": {
          "type": "object",
          "required": ["host_info", "playbooks"],
          "properties": {
            "host_info": {
              "type": "object",
              "required": [
                "ansible_connection",
                "ansible_user",
                "ansible_port",
                "ansible_python_interpreter",
                "host",
                "system"
              ],
              "properties": {
                "ansible_connection": {
                  "type" : "string"
                },
                "host": {
                  "type" : "string"
                },
                "ansible_user": {
                  "type": "string"
                },
                "ansible_password": {
                  "type": "string",
                  "default": "empty"
                },
                "ansible_ssh_private_key_file":{
                  "type": "string"
                },
                "ansible_port": {
                  "type": "integer"
                },
                "ansible_python_interpreter": {
                  "type": "string"
                },
                "system": {
                  "type": "string"
                }
              },
              "anyOf": [
                {
                  "required": ["ansible_password"]
                },
                {
                  "required": ["ansible_ssh_private_key_file"]
                }
              ]
            },
            "playbooks": {
              "type": "array",
              "items": {
                "oneOf": [
                  {
                    "required": ["local_path"]
                  },
                  {
                    "required": ["remote_url"]
                  }
                ]
              }
            }
          }
        }
      }
    },
    "tests": {
      "type": "object",
      "patternProperties": {
        "^host_[0-9]*$": {
          "type": "object",
          "required": ["host_info", "test"],
          "properties": {
            "host_info": {
              "type": "object",
              "required": [
                "ansible_connection",
                "ansible_user",
                "ansible_port",
                "installation_files_path",
                "ansible_python_interpreter",
                "host",
                "system"
              ],
              "properties": {
                "ansible_connection": {
                  "type" : "string"
                },
                "host": {
                  "type" : "string"
                },
                "ansible_user": {
                  "type": "string"
                },
                "ansible_password": {
                  "type": "string",
                  "default": "empty"
                },
                "ansible_ssh_private_key_file":{
                  "type": "string"
                },
                "ansible_port": {
                  "type": "integer"
                },
                "ansible_python_interpreter": {
                  "type": "string"
                },
                "installation_files_path": {
                  "type": "string"
                },
                "system": {
                  "type": "string"
                }
              },
              "anyOf": [
                {
                  "required": ["ansible_password"]
                },
                {
                  "required": ["ansible_ssh_private_key_file"]
                }
              ]
            },
            "test": {
              "type": "object",
              "required": [
                "path",
                "type"
              ],
              "properties": {
                "hosts": {
                  "type": "string"
                },
                "type": {
                  "type": "string"
                },
                "path": {
                  "type": "object",
                  "required": [
                    "test_files_path",
                    "run_tests_dir_path",
                    "test_results_path"
                  ],
                  "properties": {
                    "test_files_path": {
                      "type": "string"
                    },
                    "run_tests_dir_path": {
                      "type": "string"
                    },
                    "test_results_path": {
                      "type": "string"
                    }
                  }
                },
                "parameters": {
                  "type": "object",
                  "properties": {
                    "tier": {
                      "type": "string"
                    },
                    "stop_after_first_failure": {
                      "type": "boolean"
                    },
                    "keyword_expression": {
                      "type": "string"
                    },
                    "traceback": {
                      "type": "string"
                    },
                    "dry_run": {
                      "type": "boolean"
                    },
                    "custom_args": {
                      "type": "string"
                    },
                    "verbose_level": {
                      "type": "boolean"
                    },
                    "log_level": {
                      "type": "string"
                    },
                    "markers": {
                      "type": "array"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "config": {
      "$id": "#/properties/config",
      "type": "object",
      "patternProperties": {
        "qa_ctl_launcher_branch": {
          "type": "string"
        },
        "vagrant_output": {
          "type": "boolean"
        },
        "ansible_output": {
          "type": "boolean"
        },
        "logging":{
          "type": "object",
          "properties": {
            "enable": {
              "type": "boolean"
            },
            "level": {
              "type": "string",
              "enum": ["DEBUG", "INFO", "WARNING", "ERROR", "CRITICAL"]
            },
            "file": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
