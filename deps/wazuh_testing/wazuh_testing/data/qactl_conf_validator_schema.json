{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "QACTL Config file schema",
  "properties": {
    "deployment": {
      "$id": "#/properties/deployment",
      "type": "object",
      "patternProperties": {
        "^host[0-9]*$": {
          "type": "object",
          "properties": {
            "provider": {
              "type": "object",
              "properties": {
                "vagrant": {
                  "type": "object",
                  "required": [
                    "enabled",
                    "vagrantfile_path",
                    "vagrant_box",
                    "vm_memory",
                    "vm_cpu",
                    "vm_name",
                    "vm_system",
                    "label",
                    "vm_ip"
                  ],
                  "properties": {
                    "enabled": {
                      "type": "boolean"
                    },
                    "vagrantfile": {
                      "type": "string"
                    },
                    "vagrant_box": {
                      "type": "string"
                    },
                    "vm_memory": {
                      "type": "integer"
                    },
                    "vm_cpu": {
                      "type": "integer"
                    },
                    "vm_name": {
                      "type": "string"
                    },
                    "vm_system": {
                      "type": "string"
                    },
                    "label": {
                      "type": "string"
                    },
                    "vm_ip": {
                      "type": "string"
                    },
                    "quiet_out": {
                      "type": "boolean"
                    }
                  }
                },
                "docker": {
                  "type": "object",
                  "required": [
                    "enabled",
                    "dockerfile_path",
                    "name"
                  ],
                  "properties": {
                    "enabled": {
                      "type": "boolean"
                    },
                    "dockerfile_path": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "ip": {
                      "type": "string"
                    },
                    "remove": {
                      "type": "boolean"
                    },

                    "dockerfile": {
                      "type": "string"
                    },
                    "ports": {
                      "type": "object"
                    },
                    "detach": {
                      "type": "boolean",
                      "default": "true"
                    },
                    "stdout": {
                      "type": "boolean"
                    },
                    "stderr": {
                      "type": "boolean"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "provision": {
      "type": "object",
      "required": [
        "hosts"
      ],
      "properties": {
        "hosts": {
          "patternProperties": {
            "^host[0-9]*$": {
              "type": "object",
              "required": [
                "host_info",
                "wazuh_deployment",
                "qa_framework"
              ],
              "properties": {
                "host_info": {
                  "type": "object",
                  "required": [
                    "connection_method",
                    "host",
                    "user",
                    "password",
                    "connection_port",
                    "ansible_python_interpreter"
                  ],
                  "properties": {
                    "connection_method": {
                      "type": "string"
                    },
                    "host": {
                      "type": "string"
                    },
                    "user": {
                      "type": "string"
                    },
                    "password": {
                      "type": "string"
                    },
                    "connection_port": {
                      "type": "integer"
                    },
                    "ansible_python_interpreter": {
                      "type": "string"
                    }
                  }
                },
                "wazuh_deployment": {
                  "type": "object",
                  "required": [
                    "type",
                    "target",
                    "installation_files_path"
                  ],
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": ["sources", "package"]
                    },
                    "target": {
                      "type": "string",
                      "enum": ["manager", "agent"]
                    },
                    "manager_ip": {
                      "type": "string"
                    },
                    "wazuh_branch": {
                      "type": "string"
                    },
                    "local_package_path": {
                      "type": "string"
                    },
                    "installation_files_path": {
                      "type": "string"
                    },
                    "version":{
                      "type": "string"
                    },
                    "system":{
                      "type": "string"
                    },
                    "revision":{
                      "type": "string"
                    },
                    "repository":{
                      "type": "string"
                    },
                    "architecture":{
                      "type": "string"
                    },
                    "wazuh_install_path": {
                      "type": "string",
                      "default": "/var/ossec"
                    },
                    "health_check": {
                      "type": "boolean"
                    },
                    "s3_package_url": {
                      "type" : "string"
                    }
                  },
                  "allOf": [
                    {
                      "if": {
                        "properties": {"type": {"const": "sources"}}
                      },
                      "then": {"required": ["wazuh_branch"]},
                      "else": {
                        "oneOf": [
                          {"required": ["local_package_path"]},
                          {"required": ["s3_package_url"]},
                          {"required": [
                            "version", 
                            "system", 
                            "revision", 
                            "repository",
                            "architecture"]}
                        ]
                      }
                    },
                    {
                      "if": {
                        "properties": {"target": {"const": "agent"}}
                      },
                      "then": {"required": ["manager_ip"]}
                    }
                  ]
                },
                "qa_framework": {
                  "type": "object",
                  "required": [
                    "wazuh_qa_branch",
                    "qa_workdir"
                  ],
                  "properties": {
                    "wazuh_qa_branch": {
                      "type": "string"
                    },
                    "qa_workdir": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "tests": {
      "type": "object",
      "patternProperties": {
        "^host[0-9]*$": {
          "type": "object",
          "required": ["host_info", "test"],
          "properties": {
            "host_info": {
              "type": "object",
              "required": [
                "connection_method",
                "host",
                "user",
                "connection_port",
                "ansible_python_interpreter"
              ],
              "properties": {
                "connection_method": {
                  "type" : "string"
                },
                "host": {
                  "type" : "string"
                },
                "user": {
                  "type": "string"
                },
                "password": {
                  "type": "string",
                  "default": "empty"
                },
                "ssh_private_key_file_path":{
                  "type": "string"
                },
                "connection_port": {
                  "type": "integer"
                },
                "ansible_python_interpreter": {
                  "type": "string"
                }
              },
              "oneOf": [
                {
                  "required": ["password"]
                },
                {
                  "required": ["ssh_private_key_file_path"]
                }
              ]
            },
            "test": {
              "type": "object",
              "required": ["path"],
              "properties": {
                "hosts": {
                  "type": "string"
                },
                "type": {
                  "type": "string"
                },
                "path": {
                  "type": "object",
                  "required": [
                    "test_files_path",
                    "run_tests_dir_path",
                    "test_results_path"
                  ],
                  "properties": {
                    "test_files_path": {
                      "type": "string"
                    },
                    "run_tests_dir_path": {
                      "type": "string"
                    },
                    "test_results_path": {
                      "type": "string"
                    }
                  }
                },
                "parameters": {
                  "type": "object",
                  "properties": {
                    "tier": {
                      "type": "string"
                    },
                    "stop_after_first_failure": {
                      "type": "boolean"
                    },
                    "keyword_expression": {
                      "type": "string"
                    },
                    "traceback": {
                      "type": "string"
                    },
                    "dry_run": {
                      "type": "boolean"
                    },
                    "custom_args": {
                      "type": "string"
                    },
                    "verbose_level": {
                      "type": "boolean"
                    },
                    "log_level": {
                      "type": "string"
                    },
                    "markers": {
                      "type": "array"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "config": {
    "$id": "#/properties/config",
    "type": "object",
    "patternProperties": {
      "vagrant_output": {
        "type": "boolean"
      },
      "ansible_output": {
        "type": "boolean"
      },
      "logging":{
        "type": "object",
        "properties": {
          "enable": {
            "type": "boolean"
          },
          "level": {
            "type": "string",
            "enum": ["DEBUG", "INFO", "WARNING", "ERROR", "CRITICAL"]
          },
          "file": {
            "type": "string"
          }
        }
      }
    }
  }
}
