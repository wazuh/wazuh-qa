- name: Install pip
  package:
    name: python3-pip
    state: present
    update_cache: yes

- name: Upgrade pip
  pip:
    name: pip
    state: latest

- name: Copy requirements.txt
  copy:
    src: {{ component }}
    dest: /tmp/requirements.txt

- name: Install pip packages
  pip:
    requirements: /tmp/requirements.txt
